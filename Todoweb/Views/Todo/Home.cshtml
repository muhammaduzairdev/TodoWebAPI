@model IEnumerable<Todoweb.Models.Todo>

@{
	ViewData["Title"] = "Home";
}

<h1>Home</h1>

<p>
	<a asp-action="AddTodo" class="btn btn-primary">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>

			<th>
				Todo Name
			</th>
			<th>
				Todo Description
			</th>
			<th>
				CreatedAt
			</th>
			<th>
				UpdatedAt
			</th>
			<th>Operations</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@item.Name
				</td>
				<td>
					@item.Description
				</td>
				<td>
					@item.CreatedAt
				</td>
				<td>
					@if (item.UpdatedAt != null)
					{
						@item.UpdatedAt
					}
					else
					{
						<span> Not Updated Yet </span>
					}
				</td>
				<td>
					<a asp-action="Detail" asp-controller="Todo" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detail</a>
					<a asp-action="Edit" asp-controller="Todo" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
					<a asp-action="Delete" asp-controller="Todo" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Delete Confirm?')">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
